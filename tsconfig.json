{
	"compilerOptions": {
		"target": "es2020",
		"module": "esnext",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true,
		"jsx": "react",
		"strict": true,
		"outDir": "./dist",
		"typeRoots": ["./node_modules/@types", "./node_modules/automerge/@types"]
	},
	"include": ["src"]
}
